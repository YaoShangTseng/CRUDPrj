<h1>CRUD Project - Book System</h1>

<%= form_for @book do |f| %>
  <%= render partial: "form", locals: {f: f} %>
  <%= f.submit "Save" %>
<% end %>

<table>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.name %>
      </td>
      <td>
        <%= link_to "Show", book_path(book), class: "btn btn-primary" %>
        <%= link_to "Edit", books_path(book_id: book.id), class: "btn btn-primary" %>
        <%= link_to "Delete", book_path(book, page: params[:page]), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Book', books_path, class: "btn btn-primary" %>

<%= paginate @books %>